<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="fleet_vehicle_view_form_inherit_insurance_broker_car_pricing" model="ir.ui.view">
    <field name="name">fleet.vehicle.form</field>
    <field name="model">fleet.vehicle</field>
    <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='tag_ids']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//label[@for='tag_ids']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='vin_sn']" position="after">
        <field name="category_id"/>
        <field name="product_attribute_value_id"/>
        <field name="product_id"/>
        <field name="base_price"/>
      </xpath>
    </field>
  </record>
  <record id="fleet_vehicle_view_kanban_inherit_insurance_broker_car_pricing" model="ir.ui.view">
    <field name="name">fleet.vehicle.kanban</field>
    <field name="model">fleet.vehicle</field>
    <field name="inherit_id" ref="fleet.fleet_vehicle_view_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@class='o_kanban_tags_section']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//div[@class='oe_kanban_details']/ul" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//div[@class='o_kanban_button']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//div[@class='oe_kanban_details']" position="inside">
        <p>
          <field name="category_id"/>
        </p>
        <p>
          <field name="product_id"/>
        </p>
      </xpath>
    </field>
  </record>
  <record id="fleet_vehicle_view_tree_inherit_insurance_broker_car_pricing" model="ir.ui.view">
    <field name="name">fleet.vehicle.tree</field>
    <field name="model">fleet.vehicle</field>
    <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='driver_id']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='vin_sn']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='acquisition_date']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='odometer']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='odometer_unit']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='model_id']" position="after">
        <field name="category_id" />
        <field name="product_attribute_value_id" />
        <field name="seats" />
        <field name="product_id" />
        <field name="base_price" />
      </xpath>
    </field>
  </record>
</odoo>
