<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <menuitem action="fleet.fleet_vehicle_action" id="sale_vehicle_menu" parent="sales_team.menu_sales" sequence="20" groups="sales_team.group_sale_salesman"/>
  <menuitem action="insurance_broker_car_pricing.price_finder_action" id="sale_price_finder_menu" parent="sales_team.menu_sales" sequence="30" groups="sales_team.group_sale_salesman"/>
  <record id="view_order_form_inherit_insurance_broker_car_pricing" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="priority" eval="20"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']" position="attributes">
        <attribute name="context">{'sale_order_id': id}</attribute>
      </xpath>
      <xpath expr="//field[@name='partner_shipping_id']" position="after">
        <field name="vehicle_id"/>
      </xpath>
      <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
        <field name="vehicle_id"/>
      </xpath>
    </field>
  </record>
</odoo>
