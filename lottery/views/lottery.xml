<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Top menu item -->
	<menuitem name="Lottery"
	    id="menu_main_lottery"
	    groups="lottery.group_reporter"
	    sequence="50"/>

        <menuitem id="menu_lottery_config" name="Configuration" parent="menu_main_lottery"
            sequence="100" groups="lottery.group_game_manager"/>

        <record id="action_view_entity" model="ir.actions.act_window">
            <field name="name">Entities</field>
            <field name="res_model">res.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                        Create/edit lottery structure/entities and set the default parameters for each entity.
                </p>
            </field>
        </record>

        <menuitem action="action_view_entity" id="menu_action_view_entity"
                parent="lottery.menu_lottery_config" sequence="5" groups="lottery.group_lottery_administrator"/>

        <record id="lottery_game_type_view_form" model="ir.ui.view">
            <field name="name">lottery.game.type.form</field>
            <field name="model">lottery.game.type</field>
            <field name="arch" type="xml">
                <form string="Game type">
                        <sheet string="Lottery Game type">
                                <group>
                                        <field name="name"/>
                                        <field name="active"/>
                                </group>
                        </sheet>
                </form>
            </field>
        </record>

        <record id="lottery_game_view_form" model="ir.ui.view">
            <field name="name">lottery.game.form</field>
            <field name="model">lottery.game</field>
            <field name="arch" type="xml">
                <form string="Game">
                        <sheet string="Lottery Game">
                                <group>
                                        <field name="name"/>
                                        <field name="type_id" options="{'no_create': True}"/>
                                </group>
                        </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_game" model="ir.actions.act_window">
            <field name="name">Games</field>
            <field name="res_model">lottery.game</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                        Create/edit lottery games and set the default parameters for each game.
                </p>
            </field>
        </record>

        <menuitem id="menu_lottery" name="Lottery" parent="menu_main_lottery"
            sequence="99" groups="lottery.group_game_manager"/>

        <menuitem action="action_view_game" id="menu_action_view_game"
                parent="lottery.menu_lottery" sequence="5" groups="lottery.group_game_manager"/>

        <record id="action_view_game_type" model="ir.actions.act_window">
            <field name="name">Game types</field>
            <field name="res_model">lottery.game.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="help" type="html">
                <p>
                        Create/edit lottery game types.
                </p>
            </field>
        </record>

        <menuitem action="action_view_game_type" id="menu_action_view_game_type"
                parent="lottery.menu_lottery_config" sequence="4" groups="lottery.group_game_administrator"/>

</odoo>
