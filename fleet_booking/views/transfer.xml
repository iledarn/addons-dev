<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <!--FORMS-->
    <record model='ir.ui.view' id='fleet_booking_transfer_form'>
        <field name="name">fleet.vehicle.model.form</field>
        <field name="model">fleet_booking.transfer</field>
        <field name="arch" type="xml">
            <form string="Transfer">
                <header>
                    <button name="submit" states="draft" string="Submit" type="object" class="oe_highlight"
                            groups="fleet_booking.group_vehicles_support_officer"/>
                    <button name="un_submit" string="Cancel submit" type="object"
                            attrs="{'invisible':['|',('delivery_state','=','delivered'),('state','!=','transfer')]}"
                            groups="fleet_booking.group_vehicles_support_officer"/>
                    <button name="confirm_delivery" string="Confirm delivery" type="object" class="oe_highlight"
                            attrs="{'invisible':['|','|',('state','in',('draft')),('can_change_delivery_state', '!=', True),('delivery_state','!=','not_delivered')]}"
                            groups="fleet_booking.group_branch_officer"/>
                    <button name="un_confirm_delivery" string="Cancel confirm delivery" type="object"
                            attrs="{'invisible':['|',('can_change_delivery_state', '!=', True),('delivery_state','!=','delivered')]}"
                            groups="fleet_booking.group_branch_officer"/>
                    <button name="confirm_receiving" string="Confirm receiving" type="object" class="oe_highlight"
                            attrs="{'invisible':['|','|','|',('state','in',('draft')),('can_change_receiving_state', '!=', True),('receiving_state','!=','not_received'),('delivery_state','!=','delivered')]}"
                            groups="fleet_booking.group_branch_officer"/>
                    <button name="un_confirm_receiving" string="Cancel confirm receiving" type="object"
                            attrs="{'invisible':['|',('can_change_receiving_state', '!=', True),('receiving_state','!=','received')]}"
                            groups="fleet_booking.group_branch_officer"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,transfer,done"/>
                </header>
                <sheet>
                    <group col="2" string="Vehicle transfer">
                        <group>
                            <field name="vehicle_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="vehicle_state_id" readonly="1"/>
                            <field name="current_odometer" readonly="1"/>
                        </group>
                    </group>
                    <group col="2" string="Route">
                        <group>
                            <field name="source_branch" readonly="1"/>
                        </group>
                        <group>
                            <field name="dest_branch" readonly="1"/>
                        </group>
                    </group>
                    <group col="2" string="State">
                        <group>
                            <field name="delivery_state"/>
                        </group>
                        <group>
                            <field name="receiving_state"/>
                        </group>
                    </group>
                    <field name="can_change_delivery_state" invisible="1"/>
                    <field name="can_change_receiving_state" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
    <record model='ir.ui.view' id='fleet_booking_transfer_tree'>
        <field name="name">fleet_booking.transfer.tree</field>
        <field name="model">fleet_booking.transfer</field>
        <field name="arch" type="xml">
            <tree string="Transfers">
                <field name="create_uid" />
                <field name="vehicle_id"/>
                <field name="source_branch"/>
                <field name="dest_branch"/>
                <field name="current_odometer"/>
                <field name="delivery_state"/>
                <field name="receiving_state"/>
            </tree>
        </field>
    </record>

    <!--ACTIONS-->
    <record model='ir.actions.act_window' id='fleet_transfers_in'>
        <field name="name">Incoming</field>
        <field name="res_model">fleet_booking.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('dest_branch.branch_officer_ids','=', uid)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new transfer.
            </p>
        </field>
    </record>
    <record model='ir.actions.act_window' id='fleet_transfers_out'>
        <field name="name">Outgoing</field>
        <field name="res_model">fleet_booking.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('source_branch.branch_officer_ids','=', uid)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new transfer.
            </p>
        </field>
    </record>
    <record model='ir.actions.act_window' id='fleet_transfers_act'>
        <field name="name">All transfers</field>
        <field name="res_model">fleet_booking.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new transfer.
            </p>
        </field>
    </record>

    <!--MENU-->
    <menuitem name="Transfers" parent="fleet.menu_root" id="fleet_transfers" sequence="3" groups="fleet.group_fleet_user"/>
    <menuitem action="fleet_transfers_in" parent="fleet_transfers" id="fleet_transfers_in_menu" groups="fleet.group_fleet_user"/>
    <menuitem action="fleet_transfers_out" parent="fleet_transfers" id="fleet_transfers_out_menu" groups="fleet.group_fleet_user"/>
    <menuitem action="fleet_transfers_act" parent="fleet_transfers" id="fleet_transfers_all_menu" groups="fleet.group_fleet_user"/>

    <!--ACCESS RIGHTS-->
    <!--VEHICLE SUPPORT OFFICER EXTRA RIGHTS-->
    <record id="fleet_booking_transfer_form_vso" model="ir.ui.view">
        <field name="name">fleet.booking.transfer.form.vso.inherit</field>
        <field name="model">fleet_booking.transfer</field>
        <field name="inherit_id" ref="fleet_booking_transfer_form"/>
        <field name="groups_id" eval="[(4, ref('fleet_booking.group_vehicles_support_officer'), 0)]"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='current_odometer']" position="replace">
                    <field name="current_odometer" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='source_branch']" position="replace">
                    <field name="source_branch" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='dest_branch']" position="replace">
                    <field name="dest_branch" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='vehicle_id']" position="replace">
                    <field name="vehicle_id" readonly="0"/>
                </xpath>
            </data>
        </field>
    </record>

</data>
</openerp>
