<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_make_invoice_wizard" model="ir.ui.view">
      <field name="name">Invoice Orders</field>
      <field name="model">fleet_rental.create_invoice_wizard</field>
      <field name="arch" type="xml">
        <form string="Invoice Rent">
          <p class="oe_grey">
            Invoices will be created in draft so that you can update
            them before validation.
          </p>
          <group>
            <field name="amount" class="oe_inline" widget="monetary"/>
          </group>
          <footer>
            <button name="create_invoices" string="Create and View Invoices" type="object"
                    context="{'open_invoices': True}" class="btn-primary"/>
            <button name="create_invoices" string="Create Invoices" type="object"
                    class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_make_invoice_wizard" model="ir.actions.act_window">
      <field name="name">Invoice Order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">fleet_rental.create_invoice_wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="groups_id" eval="[(4,ref('base.group_sale_salesman'))]"/>
    </record>

  </data>
</openerp>
